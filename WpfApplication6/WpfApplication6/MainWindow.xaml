                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding FirstAdd1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="0" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBlock Text="X" Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBlockStyle_Caculate}"></TextBlock>
                <TextBox Text="{Binding SecondAdd1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="2" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBlock Text="=" Grid.Row="0" Grid.Column="3" Style="{StaticResource TextBlockStyle_Caculate}"></TextBlock>
                <TextBox Text="{Binding LValue1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="4" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBox Text="{Binding DValue1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="5" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>

                <TextBox Text="{Binding FirstAdd2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="0" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
