                <TextBox Text="{Binding SecondAdd2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="2" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
