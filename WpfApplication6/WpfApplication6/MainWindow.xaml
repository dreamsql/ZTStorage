                <TextBox Text="{Binding SecondAdd3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="2" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBlock Text="=" Grid.Row="2" Grid.Column="3" Style="{StaticResource TextBlockStyle_Caculate}"></TextBlock>
                <TextBox Text="{Binding LValue3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="4" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBox Text="{Binding DValue3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="5" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>




                <TextBox Text="{Binding FirstAdd4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="0" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBlock Text="X" Grid.Row="3" Grid.Column="1" Style="{StaticResource TextBlockStyle_Caculate}"></TextBlock>
                <TextBox Text="{Binding SecondAdd4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="2" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBlock Text="=" Grid.Row="3" Grid.Column="3" Style="{StaticResource TextBlockStyle_Caculate}"></TextBlock>
                <TextBox Text="{Binding LValue4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="4" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBox Text="{Binding DValue4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="5" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>



                <TextBox Text="{Binding FirstAdd5, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="0" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBlock Text="X" Grid.Row="4" Grid.Column="1" Style="{StaticResource TextBlockStyle_Caculate}"></TextBlock>
                <TextBox Text="{Binding SecondAdd5, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="2" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBlock Text="=" Grid.Row="4" Grid.Column="3" Style="{StaticResource TextBlockStyle_Caculate}"></TextBlock>
                <TextBox Text="{Binding LValue5, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="4" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBox Text="{Binding DValue5, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="5" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>



                <TextBox Text="{Binding FirstAdd6, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="0" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBlock Text="X" Grid.Row="5" Grid.Column="1" Style="{StaticResource TextBlockStyle_Caculate}"></TextBlock>
                <TextBox Text="{Binding SecondAdd6, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="2" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBlock Text="=" Grid.Row="5" Grid.Column="3" Style="{StaticResource TextBlockStyle_Caculate}"></TextBlock>
                <TextBox Text="{Binding LValue6, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="4" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBox Text="{Binding DValue6, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="5" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>




                <TextBox Text="{Binding FirstAdd7, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="6" Grid.Column="0" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBlock Text="X" Grid.Row="6" Grid.Column="1" Style="{StaticResource TextBlockStyle_Caculate}"></TextBlock>
                <TextBox Text="{Binding SecondAdd7, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="6" Grid.Column="2" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBlock Text="=" Grid.Row="6" Grid.Column="3" Style="{StaticResource TextBlockStyle_Caculate}"></TextBlock>
                <TextBox Text="{Binding LValue7, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="6" Grid.Column="4" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>
                <TextBox Text="{Binding DValue7, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="6" Grid.Column="5" Style="{StaticResource TextBoxStyle_Caculate}"></TextBox>



